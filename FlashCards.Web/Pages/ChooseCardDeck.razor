@page "/ChooseCardDeck"

<h3>ChooseCardDeck</h3>

@inherits ChooseCardDeckBase

<div class="card-deck">

    <div class="card m-3" style="min-width: 18rem; max-width:30.5%;">
        <div class="card-header">
            <h1>FLASHCARD</h1>

            <h3> Choose a card deck:</h3>
        </div>
        
        @foreach (var deck in Decks)
        {


            <div class="card text-center">

                <a href="@($"/DeckDetails/{deck.DeckId}")"> @deck.DeckName</a> 


            </div>

        }
    </div>
</div>




